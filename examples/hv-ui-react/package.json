{
  "name": "@hv-ui/react",
  "version": "1.0.1-canary.7",
  "description": "React components for the HV Design System.",
  "main": "core/index.js",
  "module": "core/index.es.js",
  "repository": {
    "type": "git",
    "url": "https://10.76.48.133/hv-design-system/hv-ui-react.git"
  },
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:watch": "watch 'npm run build' src",
    "dev:storybook": "start-storybook -p 9001 -c .storybook",
    "build": "npm-run-all clean build:*",
    "build:copy": "copyfiles -f src/index.js core && move-cli core/index.js core/index.es.js",
    "build:babel": "npx babel src -d core --source-maps --copy-files",
    "build:clean": "del core/**/tests",
    "clean": "del core",
    "lint": "eslint .",
    "test": "jest -c config/jest-config.js -u --coverage",
    "test:watch": "jest -c config/jest-config.js -u --watch",
    "prepublish": "npm run build",
    "postpublish": "npm run clean"
  },
  "dependencies": {
    "@hv-ui/themes": "latest",
    "@material-ui/core": "^3.5.1",
    "@material-ui/icons": "^3.0.1",
    "@storybook/react": "^4.0.7",
    "classnames": "^2.2.6",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-date-range": "^1.0.0-beta",
    "react-day-picker": "^7.2.4",
    "react-dom": "^16.6.3",
    "react-icons": "^2.2.7",
    "react-jss": "^8.6.1",
    "react-select": "^2.1.1",
    "react-table": "^6.8.6"
  },
