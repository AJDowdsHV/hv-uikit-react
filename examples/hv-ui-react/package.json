{
  "name": "@hv-ui/react",
  "version": "1.0.0",
  "description": "React components for the HV Design System.",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:watch": "watch 'npm run build' src",
    "dev:storybook": "start-storybook -p 9001 -c .storybook",
    "build": "npm-run-all build:*",
    "build:cleandist": "del dist",
    "build:copy": "copyfiles -f src/index.js dist && move-cli dist/index.js dist/index.es.js",
    "build:babel": "npx babel src -d dist --copy-files",
    "build:cleantests": "del dist/**/tests",
    "lint": "eslint .",
    "test": "jest -c config/jest-config.js -u --coverage",
    "test:watch": "jest -c config/jest-config.js -u --watch"
  },
  "dependencies": {
    "@hv-ui/themes": "git+https://gitlab-edge.eng.hitachivantara.com/hv-design-system/hv-ui-themes.git",
    "@material-ui/core": "^3.2.0",
    "@material-ui/icons": "^3.0.1",
    "@storybook/cli": "^4.0.4",
    "@storybook/react": "^4.0.4",
    "classnames": "^2.2.6",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-jss": "^8.6.1",
    "react-select": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-preset-airbnb": "^3.0.1",
    "copyfiles": "^2.1.0",
    "del-cli": "^1.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "jest": "^23.6.0",
    "move-cli": "^1.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "react-test-renderer": "16.4.2",
    "watch": "^1.0.2",
    "webpack": "^4.25.1"
  },
  "files": [
    "dist"
  ],
  "precommit": "build",
  "jest": {
    "testEnvironment": "node"
  }
}
