{
  "name": "@hv-ui/themes",
  "version": "1.0.1-canary.0",
  "description": "A collection of themes for use with Hitachi Vantara Components.",
  "license": "LicenseRef-LICENSE",
  "author": {
    "name": "Hitachi Vantara IOTA Team"
  },
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://gitlab-edge.eng.hitachivantara.com/hv-design-system/hv-ui-themes.git"
  },
  "scripts": {
    "dev": "watch 'npm run build' src",
    "build": "npm-run-all clean build:*",
    "build:to-scss": "json-to-scss src/*.* dist",
    "build:to-json": "copyfiles src/*.json dist -f",
    "clean": "del dist",
    "prepublish": "npm run build",
    "postpublish": "npm run clean"
  },
  "devDependencies": {
    "copyfiles": "^2.1.0",
    "del-cli": "^1.1.0",
    "json-to-scss": "^1.3.1",
    "npm-run-all": "^4.1.3",
    "watch": "^1.0.2",
    "prettier": "^1.15.2"
  },
  "publishConfig": {
    "registry": "https://nexus3.pentaho.com/repository/public-npm-release/"
  }
}
