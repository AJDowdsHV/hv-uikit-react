{
  "name": "@hv-ui/themes",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "A collection of themes for use with Hitachi Vantara Components.",
  "scripts": {
    "dev": "watch 'npm run build' ./src",
    "build": "npm-run-all clean build:*",
    "build:to-scss": "json-to-scss ./src/*.* ./dist",
    "build:dist": "copyfiles ./src/*.json ./dist -f",
    "clean": "del ./dist"
  },
  "devDependencies": {
    "copyfiles": "^2.1.0",
    "del-cli": "^1.1.0",
    "json-to-scss": "^1.3.1",
    "npm-run-all": "^4.1.3",
    "pre-commit": "^1.2.2",
    "watch": "^1.0.2"
  },
  "files": [
    "dist/"
  ],
  "precommit": "build"
}
