{
  "name": "@hv-ui/react",
  "version": "0.2.0",
  "description": "React components for the HV Design System.",
  "license": "LicenseRef-LICENSE",
  "author": {
    "name": "Hitachi Vantara IOTA Team"
  },
  "main": "core/index.js",
  "module": "core/index.es.js",
  "repository": {
    "type": "git",
    "url": "https://10.76.48.133/hv-design-system/hv-ui.git"
  },
  "scripts": {
    "dev": "npm-run-all clean -p dev:*",
    "dev:watch": "watch 'npm run build' src",
    "dev:storybook": "start-storybook -p 9001 -c .storybook",
    "build": "npm-run-all build:*",
    "build:copy": "copyfiles -f src/index.js core && mv core/index.js core/index.es.js",
    "build:babel": "npx babel src -d core --source-maps --copy-files",
    "build:clean": "npx del core/**/tests",
    "clean": "npx del core",
    "lint": "eslint ./ --cache --ignore-pattern .gitignore --forceExit",
    "lint:jenkins": "eslint -f checkstyle . > eslint.xml",
    "test": "jest -c config/jest-config.js --coverage",
    "test:watch": "jest -c config/jest-config.js --watch",
    "test:update": "jest -c ./config/jest-config.js --u",
    "prepublish": "npm-run-all clean build",
    "postpublish": "npm run clean",
    "link": "npm link",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [
    "precommit-msg",
    "lint"
  ],
  "dependencies": {
    "@hv-ui/icons": "^0.2.0",
    "@hv-ui/themes": "^0.2.0",
    "@material-ui/core": "^3.5.1",
    "@material-ui/icons": "^3.0.1",
    "@storybook/react": "^4.0.7",
    "classnames": "^2.2.6",
    "deep-diff": "^1.0.2",
    "jest-junit": "^6.2.1",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "npx": "^10.2.0",
    "prop-types": "^15.6.2",
    "rc-slider": "8.6.3",
    "rc-tooltip": "^3.7.3",
    "react": "^16.6.3",
    "react-date-range": "^1.0.0-beta",
    "react-day-picker": "^7.2.4",
    "react-dom": "^16.6.3",
    "react-google-charts": "^3.0.10",
    "react-icons": "^2.2.7",
    "react-jss": "^8.6.1",
    "react-select": "^2.1.1",
    "react-table": "6.8.6",
    "react-table-hoc-fixed-columns": "^1.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
