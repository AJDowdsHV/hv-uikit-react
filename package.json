{
  "name": "hv-ui",
  "version": "0.0.1",
  "description": "A collection of Themes and UI Components for the Hitachi Vantara Design System.",
  "private": true,
  "author": {
    "name": "Hitachi Vantara UI Kit Team"
  },
  "repository": {
    "type": "git",
    "url": "https://10.76.48.133/hv-design-system/hv-ui.git"
  },
  "scripts": {
    "clean": "lerna clean --yes",
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --parallel",
    "dev_win": "npm-run-all dev_win:*",
    "dev_win:build": "lerna run build --scope \"@hv-ui/icons\" --stream",
    "dev_win:watch": "lerna run dev_win --parallel",
    "dev": "npm-run-all dev:*",
    "dev:build": "lerna run build --scope '@hv-ui/icons' --stream",
    "dev:watch": "lerna run dev --parallel",
    "lint": "lerna run lint --stream",
    "lint:jenkins": "lerna run lint:jenkins --stream",
    "test": "lerna run --ignore with-cra test --stream",
    "link": "lerna run link --parallel",
    "publish:preminor": "lerna publish preminor --yes",
    "publish:minor": "lerna publish minor --yes --force-publish=*",
    "publish:major": "lerna publish major --yes --force-publish=*"
  },
  "dependencies": {
    "lerna": "^3.5.1",
    "npx": "^10.2.0",
    "npm-run-all": "^4.1.3"
  }
}
