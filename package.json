{
  "name": "hv-ui",
  "version": "1.0.0",
  "description": "A collection of Themes and UI Components for the Hitachi Vantara Design System.",
  "private": true,
  "devDependencies": {
    "del-cli": "^1.1.0",
    "lerna": "^3.4.3",
    "npm-run-all": "^4.1.3"
  },
  "scripts": {
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --parallel",
    "dev": "lerna run dev --parallel",
    "build": "npm-run-all build:*",
    "build:clean": "del dist",
    "build:lerna": "lerna run build"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
